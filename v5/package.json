{
  "name": "materia-v5",
  "version": "5.0.3",
  "description": "Materia v5 - Simplified architecture with SQLite backend",
  "main": "dist/backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:webapp\"",
    "dev:backend": "nodemon --exec ts-node src/backend/server.ts",
    "dev:webapp": "cd webapp && npm run dev",
    "build": "npm run build:backend && npm run build:webapp",
    "build:backend": "tsc -p src/backend/tsconfig.json",
    "build:webapp": "cd webapp && npm run build",
    "start": "node dist/backend/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "materia",
    "productivity",
    "sqlite",
    "typescript"
  ],
  "author": "Snake",
  "license": "MIT"
}
